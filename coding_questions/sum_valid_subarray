def sum_valid_subarray(arr, target)
  left = 0
  current_sum = 0

  (0...arr.length).each do |right|
    current_sum += arr[right]

    while current_sum > target && left <= right
      current_sum -= arr[left]
      left += 1
    end

    return [left, right] if current_sum == target
  end

  nil
end

p sum_valid_subarray([1,4,20,3,10,5], 33)
# => [2, 4]
